.about-us
	//padding 50px 0
	.container
		display flex 
		flex-wrap wrap
		justify-content space-between
		margin-bottom 60px
.about-us__img, .about-us__text
	flex-basis auto
	width 50%
.about-us__img
	position relative
	background: -webkit-linear-gradient(90deg, rgb(113, 122, 255), rgb(223, 119, 255));
	width 100%
	max-width 380px
	height 310px
	margin 0 auto
	
	img
		position absolute
		left 50%
		top -50px
		z-index 1
		transform translateX(-50%)
		
	&:after
		content ''
		position absolute
		top 20px
		bottom 20px
		left 20px
		right 20px
		background-color white
		display block	
.about-us__text
	font-size 24px
	color #333
	font-family "MuseoSansCyrl-300"
	line-height 40px
	p
		margin-bottom 50px